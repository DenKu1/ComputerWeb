<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1"> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>     
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-light navbar-light border-bottom">
        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link text-info" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Buildings", "Index", "Building", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Computers", "Index", "Computer", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Rooms", "Index", "Room", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Routers", "Index", "Router", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Search devices", "Index", "Device", null, new { @class = "nav-link" })
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            @if (User.Identity.IsAuthenticated)
            {
            <li class="nav-item dropdown">
                <div class="navbar-text dropdown-toggle" id="navbardrop" data-toggle="dropdown">Account: @User.Identity.Name</div>
                <div class="dropdown-menu dropdown-menu-right">
                    @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "dropdown-item" })
                </div>
            </li>
            }
            else 
            {
            <li class="nav-item">
                @Html.ActionLink("Login here", "Login", "Account", null, new { @class = "nav-link" })
            </li>            
            }
        </ul>
    </nav>
    <div class="p-5">
        @RenderBody()  
    </div>
</body>
</html>
